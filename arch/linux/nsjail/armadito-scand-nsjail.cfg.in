name: "armadito-scand"
description:
"A policy which allows to execute armadito daemon in a jail.

Command line:
./nsjail --verbose -Mo -R /bin/ -R /lib -R /lib64/ -R /usr/ -R /sbin/ -T /dev -R /dev/urandom -B /home -B /tmp -R /var --keep_caps -N -- $HOME/projects/armadito/install/sbin/armadito-scand --no-daemon --log-level=debug --socket-path=/tmp/foobar

"

mode: ONCE
log_level: DEBUG

mount_proc: false

mount {
	src: "/lib"
	dst: "/lib"
	is_bind: true
	rw: false
}

mount {
	src: "/lib64"
	dst: "/lib64"
	is_bind: true
	rw: false
}

mount {
	src: "/usr/lib"
	dst: "/usr/lib"
	is_bind: true
	rw: false
}

mount {
	src: "/usr/share"
	dst: "/usr/share"
	is_bind: true
	rw: false
}

mount {
	src: "/var/lib/clamav"
	dst: "/var/lib/clamav"
	is_bind: true
	rw: false
}

mount {
	src: "/tmp"
	dst: "/tmp"
	is_bind: true
	rw: true
}

mount {
      src: "@sbindir@"
      dst: "/usr/sbin"
      is_bind: true
      rw: false
}

mount {
      src: "@libdir@"
      dst: "@libdir@"
      is_bind: true
      rw: false
}

mount {
      src: "@sysconfdir@"
      dst: "@sysconfdir@"
      is_bind: true
      rw: false
}

mount {
      src: "@localstatedir@/run"
      dst: "@localstatedir@/run"
      is_bind: true
      rw: true
}

seccomp_string: "
	POLICY armadito {
	       ALLOW { execve, access, SYSCALL[4], SYSCALL[5], SYSCALL[6], pipe, mprotect, open, dup, read, write, lseek, fcntl, close, brk, mmap, munmap, statfs, arch_prctl, set_tid_address, set_robust_list, rt_sigaction, rt_sigprocmask, getrlimit, futex, clock_gettime, getdents, eventfd2, clone, SYSCALL[63], getcwd, sysinfo, socket, unlink, bind, listen, accept, chmod, poll }
	}
	USE armadito DEFAULT KILL
"

rlimit_as: 1024
rlimit_fsize: 64

exec_bin {
	path: "/usr/sbin/armadito-scand"
	arg: "--no-daemon"
	arg: "--log-level=debug"
	arg: "--socket-path=/tmp/armadito"
}

